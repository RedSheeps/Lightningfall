<Window x:Class="Lightningfall.App.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lightningfall.App"
        xmlns:view="clr-namespace:Lightningfall.App.View"
        xmlns:controls="http://infragistics.com/Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1600">
    <Grid>
        <controls:XamTabControl>
            <controls:TabItemEx Header="Schedule">
                <view:GanttChart/>
            </controls:TabItemEx>
            <controls:TabItemEx Header="Product Backlog">
                <view:BacklogItems/>
            </controls:TabItemEx>
        </controls:XamTabControl>
    </Grid>
</Window>
